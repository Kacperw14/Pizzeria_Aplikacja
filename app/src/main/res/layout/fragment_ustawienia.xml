<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ustawienia">

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/white"
        android:contentDescription="olowek"
        android:src="@drawable/ic_pen_foreground"
        app:layout_constraintBottom_toTopOf="@+id/imageButton3"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="88dp"
        android:backgroundTint="@color/white"
        android:contentDescription="Opis_obrazka"
        android:src="@drawable/ic_pen_foreground"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/ic_konto_foreground"
        android:contentDescription="olowek2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/progressBar"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.5"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:layout_marginTop="152dp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView

        android:id="@+id/textView2"
        android:layout_width="195dp"
        android:layout_height="39dp"
        android:layout_marginTop="4dp"
        android:text="Ustawienia"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.208"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton4" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="48dp"
        android:layout_height="48dp"


        android:layout_marginBottom="12dp"
        android:contentDescription="olowek3"
        android:src="@drawable/ic_imie_foreground"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        app:layout_constraintEnd_toStartOf="@+id/textView4"


        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="100dp"
        android:layout_height="48dp"

        android:layout_marginEnd="52dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Imie"
        android:textAlignment="center"

        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toStartOf="@+id/imieEditText"
        app:layout_constraintTop_toTopOf="@+id/imieEditText"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="100dp"
        android:layout_height="48dp"

        android:layout_marginEnd="52dp"

        android:layout_marginBottom="12dp"
        android:gravity="center"
        android:text="Nazwisko"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toStartOf="@+id/nazwiskoEditText"
        app:layout_constraintTop_toTopOf="@+id/nazwiskoEditText" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="88dp"
        android:gravity="center"
        android:text="Haslo"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toStartOf="@+id/hasloEditText"
        app:layout_constraintTop_toTopOf="@+id/hasloEditText" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="12dp"
        android:contentDescription="Opis_obrazka"
        android:src="@drawable/ic_inf_foreground"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView9"
        app:layout_constraintEnd_toStartOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView5" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="88dp"
        android:importantForAccessibility="no"
        android:src="@drawable/ic_klucz_foreground"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/podpis2"
        android:layout_width="173dp"
        android:layout_height="20dp"
        android:layout_marginTop="56dp"
        android:text="Profil"


        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.949"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="384dp"
        android:layout_height="23dp"
        android:backgroundTint="@color/black"
        android:progress="45"
        android:progressTint="@color/black"
        android:scaleX="-1"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/podpis2" />

    <Button
        android:id="@+id/button5"
        style="@style/Theme.Pizzeria_Aplikacja"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="?android:attr/colorPressedHighlight"
        android:fontFamily="@font/quicksandregular"
        android:text="Wyloguj"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="354dp"
        android:layout_height="31dp"
        android:gravity="center"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:backgroundTint="@color/white"
        android:contentDescription="Opis_obrazka"
        android:src="@drawable/ic_pen_foreground"
        app:layout_constraintBottom_toTopOf="@+id/imageButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/podpis"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:backgroundTint="@color/white"
        android:contentDescription="Opis_obrazka"
        android:src="?attr/actionModeCloseDrawable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.013"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/orange" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="394dp"
        android:layout_height="15dp"


        android:color="@color/black"
        android:progress="45"
        android:progressTint="@color/black"
        android:scaleX="-1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/podpis" />

    <TextView
        android:id="@+id/podpis"
        android:layout_width="173dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:text="Edycja"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.92"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/hasloEditText"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="88dp"
        android:gravity="center"
        android:text="@{ustawienia.haslo}"
        android:autofillHints="haslo_hint"
        android:importantForAccessibility="no"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toStartOf="@+id/imageButton3" />

    <EditText
        android:id="@+id/nazwiskoEditText"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="12dp"
        android:gravity="center"

        android:text="@{ustawienia.Nazwisko}"
        android:autofillHints="nazwisko_hint"
        android:importantForAccessibility="no"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/hasloEditText"
        app:layout_constraintEnd_toStartOf="@+id/imageButton2" />

    <EditText
        android:id="@+id/imieEditText"
        android:layout_width="100dp"
        android:layout_height="48dp"

        android:layout_marginEnd="28dp"
        android:layout_marginBottom="12dp"
        android:autofillHints="imie_hint"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:text="@{ustawienia.Imie}"

        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/nazwiskoEditText"
        app:layout_constraintEnd_toStartOf="@+id/imageButton"
        app:layout_constraintTop_toTopOf="@+id/imageButton"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>